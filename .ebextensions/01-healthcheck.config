option_settings:
  aws:elasticbeanstalk:environment:process:default:
    # ALB -> instances en HTTP interne (public = HTTPS via ALB)
    Port: '80'
    Protocol: HTTP
    # Endpoint de santé de l'app (doit renvoyer 200 sans auth)
    HealthCheckPath: /health
    HealthCheckInterval: '15'
    HealthCheckTimeout: '5'
    HealthyThreshold: '3'
    UnhealthyThreshold: '5'
    # Accepte 2xx et 3xx en succès (utile si un middleware redirige)
    HealthCheckSuccessCodes: '200-399'
